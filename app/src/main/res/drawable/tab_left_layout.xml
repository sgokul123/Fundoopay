<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:drawable="@color/holo_yellow_dark">
    </item>

    <item>
        <rotate
            android:fromDegrees="55"
            android:pivotX="100%"
            android:pivotY="100%"
            >
            <shape
                android:shape="rectangle">
                <solid android:color="#D0DDF1" />
                <size
                    android:width="80dp"
                    android:height="40dp"
                    />
            </shape>

        </rotate>
    </item>
</layer-list>