<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dimen_20dp"
    android:layout_marginRight="@dimen/dimen_20dp"
    tools:context="com.fundoopay.fundoopay.addaccount.AddAccountFragment">
    <LinearLayout
        android:id="@+id/linearLayoutFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.6">
            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_100dp"
                app:srcCompat="@mipmap/unionbank"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_18sp"
                android:textAlignment="textEnd"
                android:text="Union Bank of India"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_18sp"
                android:text="xxxxxxxx4251"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dimen_18sp"
                android:text="Saving"/>
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:textSize="@dimen/dimen_18sp"
                android:layout_height="wrap_content"
                android:text="IFSC - 0000505"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayoutPin"
        android:layout_below="@+id/linearLayoutFirst"
        android:layout_width="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:textSize="@dimen/dimen_30sp"
            android:textColor="@color/holo_blue_dark"
            android:text="UPI PIN"/>


        <android.support.v7.widget.AppCompatEditText
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:textColor="@color/holo_blue_dark"
            android:maxLength="1"
            />
        <android.support.v7.widget.AppCompatEditText
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/holo_blue_dark"
            android:maxLength="1"
            />
        <android.support.v7.widget.AppCompatEditText
            android:layout_width="@dimen/dimen_50dp"
        android:layout_height="wrap_content"
            android:textColor="@color/holo_blue_dark"
            android:maxLength="1"
            />
        <android.support.v7.widget.AppCompatEditText
            android:layout_width="@dimen/dimen_50dp"
            android:layout_height="wrap_content"
            android:textColor="@color/holo_blue_dark"
            android:maxLength="1"
            />
    </LinearLayout>
    <View
        android:id="@+id/viewPin"
        android:layout_width="match_parent"
        android:layout_below="@+id/linearLayoutPin"
        android:background="@color/holo_blue_dark"
        android:alpha="0.8"
        android:layout_marginTop="@dimen/dimen_30dp"
        android:layout_height="1dp"/>
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/textViewTextPin"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_below="@+id/viewPin"
        android:layout_height="wrap_content"
        android:text="If you donâ€™t have UPI PIN"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonAddPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:textColor="@color/holo_white_dark"
        android:background="@color/holo_blue_dark"
        android:layout_below="@+id/textViewTextPin"
        android:text="SET UPI PIN"/>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/buttonResetPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="@drawable/square"
        android:layout_below="@+id/buttonAddPin"
        android:text="RESET UPI PIN"/>
    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textColor="@color/holo_blue_dark"
        android:alpha="0.7"
        android:textSize="@dimen/dimen_18sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dimen_30dp"
        />
</RelativeLayout>
