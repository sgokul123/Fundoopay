<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:background="@color/holo_blue_dark"
        android:layout_height="wrap_content"
        >
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_update"
            android:background="@color/holo_blue_dark"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            >

            <LinearLayout
                android:id="@+id/layoutFundooPay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.fundoopay.fundoopay.custom.CustomTextViewFB
                    android:id="@+id/textViewFundoo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="1dp"
                    android:text="fundoo"
                    android:textColor="@color/holo_white_dark"
                    android:textSize="@dimen/dimen_18sp"
                    android:textStyle="bold"
                    tools:typeface="serif" />

                <com.fundoopay.fundoopay.custom.CustomTextViewFB
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textViewFundoo"
                    android:text="Pay"
                    android:textColor="@color/holo_yellow_dark"
                    android:textSize="@dimen/dimen_18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
</RelativeLayout>