<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_white"
    android:clickable="false"
  >
    <include layout="@layout/layout_toolbar_upi"
        android:id="@+id/toolbarSetting"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_below="@+id/toolbarSetting"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/ic_action_bank" />

                <com.fundoopay.fundoopay.custom.CustomTextViewFA
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textColor="@color/holo_blue_dark"
                    android:text="    Bank Account"
                    android:textSize="@dimen/dimen_30dp" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@color/holo_blue_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/ic_action_loc" />

                <com.fundoopay.fundoopay.custom.CustomTextViewFA
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    Location"
                    android:textColor="@color/holo_blue_dark"
                    android:textSize="@dimen/dimen_30dp" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:background="@color/holo_blue_dark" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/ic_action_phone" />

                <com.fundoopay.fundoopay.custom.CustomTextViewFA
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    Phone"
                    android:textColor="@color/holo_blue_dark"
                    android:textSize="@dimen/dimen_30dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:orientation="vertical">

                <com.fundoopay.fundoopay.custom.CustomTextViewFA
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/holo_blue_dark"
                    android:text="@string/phone_details" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.fundoopay.fundoopay.custom.CustomTextViewFA
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:layout_weight="0.4"
                        android:text="+91"
                        android:textColor="@color/holo_blue_dark"
                        android:textSize="@dimen/dimen_18sp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2">

                        <android.support.v7.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Old Phone Number"
                            android:backgroundTint="@color/holo_blue_dark"
                            android:textColor="@color/holo_blue_dark"
                            android:textSize="@dimen/dimen_18sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_weight="0.4"
                        app:srcCompat="@drawable/ic_action_right" />

                </LinearLayout>

                <com.fundoopay.fundoopay.custom.CustomTextViewFA
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/holo_blue_dark"
                    android:text="@string/phone_new" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <com.fundoopay.fundoopay.custom.CustomTextViewFA
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_20dp"
                        android:layout_weight="0.4"
                        android:textColor="@color/holo_blue_dark"
                        android:text="+91"
                        android:textSize="@dimen/dimen_18sp" />

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:foregroundTint="@color/holo_blue_dark"
                        android:layout_weight="0.2">

                        <android.support.v7.widget.AppCompatEditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="New Phone Number"
                            android:backgroundTint="@color/holo_blue_dark"
                            android:textColor="@color/holo_blue_dark"
                            android:textSize="@dimen/dimen_18sp" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_10dp"
                        android:layout_weight="0.4"
                        app:srcCompat="@drawable/ic_action_right" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:layout_marginBottom="@dimen/dimen_10dp"
                android:background="@color/holo_blue_dark" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.8"
                    app:srcCompat="@drawable/ic_action_user" />
                <com.fundoopay.fundoopay.custom.CustomTextViewFA
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="    Profile"
                    android:textColor="@color/holo_blue_dark"
                    android:textSize="@dimen/dimen_30dp" />
            </LinearLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/holo_blue_dark"
                    android:textColor="@color/holo_blue_dark"
                    android:hint="New User Name" />
            </android.support.design.widget.TextInputLayout>
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/holo_blue_dark"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:alpha="0.5"
                android:background="@color/holo_blue_dark" />
            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/holo_blue_dark"
                android:layout_marginTop="@dimen/dimen_20dp"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dimen_10dp"
                android:alpha="0.5"
                android:background="@color/holo_blue_dark" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/buttonBankBalance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dimen_30dp"
                android:layout_marginLeft="@dimen/dimen_30dp"
                android:layout_marginRight="@dimen/dimen_30dp"
                android:layout_marginTop="@dimen/dimen_30dp"
                android:background="@drawable/square"
                android:text="Save"
                android:textColor="@color/holo_blue_dark" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
