<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/holo_blue_dark"
    tools:context=".home.view.OtpSendFragment">


    <com.fundoopay.fundoopay.custom.CustomTextViewFA
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewVerifySms"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:fontFamily="@string/Avenir"
        android:text="Verify Mobile Number"
        android:textColor="@color/holo_white_dark"
        android:textSize="@dimen/dimen_18sp" />

    <com.fundoopay.fundoopay.custom.CustomTextViewFA
        android:id="@+id/textViewVerifySms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_30dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:fontFamily="@string/Avenir"
        android:text="@string/phone_verification"
        android:textColor="@color/holo_white_dark"
        android:textSize="@dimen/dimen_14sp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/dimen_30dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewVerifySms"
            android:padding="@dimen/dimen_2dp"
            android:layout_centerHorizontal="true"
            android:background="@color/holo_white_dark"
           >

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/simCardFirst"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:text="     Sim 1"
                android:textAlignment="textStart"
                android:textColor="@color/holo_blue_dark" />

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/simCardSecound"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/dimen_100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:background="@drawable/left_diagonal_square"
                android:text="Sim 2      "
                android:textAlignment="textEnd"
                android:textColor="@color/holo_white_dark" />
    </RelativeLayout>

    <com.fundoopay.fundoopay.custom.CustomTextViewFA
        android:id="@+id/verifyMobileNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dimen_30dp"
        android:text="Next"
        android:textAlignment="center"
        android:textColor="@color/holo_white_dark"
        android:textSize="@dimen/dimen_14sp"
        android:textStyle="bold" />
    <android.support.v7.widget.AppCompatImageView
        android:layout_toRightOf="@+id/verifyMobileNext"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/dimen_21dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_next"/>
</RelativeLayout>
